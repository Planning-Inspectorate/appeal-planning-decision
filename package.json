		"connect-mongodb-session": "^4.0.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"date-fns": "^2.30.0",
		"date-fns-tz": "^2.0.0",
		"dotenv": "^16.3.1",
		"escape-html": "^1.0.3",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"express-fileupload": "^1.4.3",
		"express-oauth2-jwt-bearer": "^1.6.0",
		"express-openapi-validator": "^5.1.2",
		"express-session": "^1.17.3",
		"form-data": "^4.0.0",
		"govuk-frontend": "^3.15.0",
		"helmet": "^7.1.0",
		"joi": "^17.10.2",
		"jose": "^5.2.3",
		"js-yaml": "^3.14.1",
		"jsonpath": "^1.1.1",
		"lodash.kebabcase": "^4.1.1",
		"lusca": "^1.6.1",
		"mongodb": "^3.7.3",
		"multer": "1.4.5-lts.1",
		"node-cron": "^3.0.2",
		"node-fetch": "^2.6.7",
		"notifications-node-client": "^8.2.1",
		"nunjucks": "^3.2.2",
		"nunjucks-date-filter": "^0.1.1",
		"oidc-provider": "^8.4.5",
		"openid-client": "^5.6.4",
		"pino": "^9.2.0",
		"pino-http": "^10.1.0",
		"pins-data-model": "github:Planning-Inspectorate/data-model#1.9.17",
		"puppeteer-core": "^23.11.1",
		"stream-json": "^1.8.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-typescript-api": "^13.0.23",
		"swagger-ui-express": "^4.3.0",
		"uuid": "^9.0.0",
		"yup": "^0.32.9"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@commitlint/cz-commitlint": "^17.0.0",
		"@shelf/jest-mongodb": "^1.3.4",
		"@testing-library/dom": "^7.31.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/user-event": "^12.8.3",
		"@types/jest": "^29.5.13",
		"commitizen": "^4.3.0",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"docopt": "^0.6.2",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-enforce-catch-block-error-type-guards": "file:dev/eslint-custom-catch-blocks",
		"eslint-plugin-jest": "^26.5.3",
		"glob": "^11.0.1",
		"husky": "^8.0.0",
		"jest": "^29.4.0",
		"jest-each": "^29.1.2",
		"jest-environment-jsdom": "^28.1.1",
		"jest-fetch-mock": "^3.0.3",
		"jest-junit": "^13.2.0",
		"jest-mock-extended": "^3.0.7",
		"json-server": "^1.0.0-beta.3",
		"lint-staged": "^10.5.0",
		"nock": "^13.3.3",
		"nodemon": "3.0.2",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^11.2.1",
		"prettier": "^2.8.8",
		"prettier-plugin-prisma": "^5.0.0",
		"prisma": "^5.11.0",
		"rhea": "^1.0.24",
		"sass": "^1.49.0",
		"sinon": "^13.0.0",
		"supertest": "^6.2.4",
		"swagger-cli": "^4.0.4",
		"testcontainers": "^9.8.0",
		"webpack": "^5.94.0",
		"webpack-cli": "^4.9.2",
		"webpack-merge": "^5.8.0"
	}
}
