		"body-parser": "^2.2.0",
		"clamscan": "^2.4.0",
		"compression": "^1.8.1",
		"connect-mongodb-session": "^5.0.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"date-fns": "^2.30.0",
		"date-fns-tz": "^2.0.0",
		"dotenv": "^17.2.3",
		"escape-html": "^1.0.3",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"express-fileupload": "^1.5.2",
		"express-oauth2-jwt-bearer": "^1.6.1",
		"express-openapi-validator": "^5.6.0",
		"express-session": "^1.18.2",
		"express-validator": "7.2.1",
		"form-data": "^4.0.4",
		"govuk-frontend": "^5.13.0",
		"helmet": "^8.1.0",
		"joi": "^18.0.1",
		"jose": "^6.1.0",
		"js-yaml": "^4.1.0",
		"jsonpath": "^1.1.1",
		"lodash.kebabcase": "^4.1.1",
		"lusca": "^1.6.1",
		"mongodb": "^3.7.3",
