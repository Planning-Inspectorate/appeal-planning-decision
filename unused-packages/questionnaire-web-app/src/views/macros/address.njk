{% macro address(address, singleLine) %}
  {{ address.addressLine1 }}{{ ', ' if singleLine else '<br>' | safe }}

  {% if address.addressLine2 %}
    {{ address.addressLine2 }}{{ ', ' if singleLine else '<br>' | safe }}
  {% endif %}

  {% if address.town %}
    {{ address.town }}{{ ', ' if singleLine else '<br>' | safe }}
  {% endif %}

  {% if address.county %}
    {{ address.county }}{{ ', ' if singleLine else '<br>' | safe }}
  {% endif %}

  {{ address.postcode }}
{% endmacro %}
