{% extends "layouts/main.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}
  Information submitted - Appeal questionnaire - Appeal a householder planning decision - GOV.UK
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Questionnaire submitted"
      }) }}

      <p class="govuk-body" data-cy="lpaEmailString">{{lpaEmailString}}</p>
      <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
      <h2 class="govuk-heading-m">What happens next</h2>

      <ul>
        <li>Your evidence has been submitted to the Planning Inspectorate. You need to email a copy of the completed questionnaire to the appellant.</li>
        <li>The Planning Inspectorate will be in touch if we require any further information.</li>
      </ul>
    </div>
  </div>
{% endblock %}
