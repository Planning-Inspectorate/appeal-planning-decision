{
	"name": "horizon-householder-appeal-publish",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=14.0.0 <15.0.0",
		"npm": ">=6.0.0 <7.0.0"
	},
	"description": "Publish appeal to Horizon",
	"main": "handler.js",
	"scripts": {
		"format": "prettier --write './**/*.js'",
		"lint": "eslint ./",
		"start": "func start",
		"test": "jest",
		"test:cov": "jest --coverage",
		"test:watch": "jest --watch",
		"documentation": "jest --coverage --reporters jest-html-reporters --coverageReporters html"
	},
	"author": "Foundry4 <www.foundry4.com>",
	"lint-staged": {
		"./**/*.js": "npm run lint -- --fix",
		"./**/*.{js, json}": "npm run format"
	},
	"dependencies": {
		"amqplib": "^0.8.0",
		"axios": "^0.21.4",
		"lodash": "^4.17.21",
		"mssql": "^7.3.1",
		"pino": "^6.14.0",
		"url-parse": "^1.5.10"
	},
	"devDependencies": {
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^24.4.0",
		"jest": "^28.1.1",
		"jest-date-mock": "^1.0.8",
		"jest-html-reporters": "^2.1.7",
		"jest-junit": "^13.2.0",
		"jest-when": "^3.5.1",
		"pino-pretty": "^4.3.0",
		"prettier": "^2.6.0"
	},
	"jest": {
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		},
		"moduleFileExtensions": [
			"js",
			"json"
		],
		"rootDir": ".",
		"testRegex": ".spec.js$",
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"setupFiles": [
			"./__setups__/date.js"
		]
	}
}
