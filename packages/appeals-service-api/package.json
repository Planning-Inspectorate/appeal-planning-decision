{
	"name": "appeals-service-api",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0 <21.0.0",
		"npm": ">=9.0.0 <11.0.0"
	},
	"main": "src/main.js",
	"prisma": {
		"schema": "../database/src/schema.prisma"
	},
	"scripts": {
		"db:generate": "npx prisma generate",
		"gen-api-types": "node src/spec/write-api-types.js",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"start": "node ./",
		"start:dev": "npm run db:generate && nodemon -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
		"start:dev:debug": "npm run db:generate && nodemon --inspect=0.0.0.0 ./",
		"test": "jest --coverage",
		"test:cov": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --runInBand",
		"integration-test": "npm run db:generate && cross-env NODE_OPTIONS=\"--experimental-vm-modules --max-old-space-size=8192\" jest --silent --config ./jest.developer-test.config.js",
		"prevalidate-spec": "node src/spec/write-api-spec.js",
		"validate-spec": "npx swagger-cli validate src/spec/spec.json",
		"postvalidate-spec": "rm -rf ./src/spec/spec.json"
	},
	"author": "Planning-Inspectorate <https://gov.uk/pins>",
	"dependencies": {
		"@azure/identity": "*",
		"@azure/service-bus": "*",
		"@pins/business-rules": "file:../business-rules",
		"@pins/common": "file:../common",
		"@pins/database": "file:../database",
		"@prisma/client": "*",
		"ajv": "*",
		"ajv-errors": "*",
		"applicationinsights": "*",
		"axios": "*",
		"body-parser": "*",
		"compression": "*",
		"date-fns": "*",
		"express": "*",
		"express-async-errors": "*",
		"express-oauth2-jwt-bearer": "*",
		"express-openapi-validator": "*",
		"express-validator": "7.0.1",
		"jsonpath": "*",
		"mongodb": "*",
		"node-cron": "*",
		"pino": "*",
		"pino-http": "*",
		"pins-data-model": "*",
		"prettier": "*",
		"swagger-jsdoc": "*",
		"swagger-typescript-api": "*",
		"swagger-ui-express": "*",
		"uuid": "*"
	},
	"devDependencies": {
		"@shelf/jest-mongodb": "*",
		"cross-env": "*",
		"jest": "*",
		"jest-junit": "*",
		"jest-when": "*",
		"mockserver-client": "*",
		"mockserver-node": "*",
		"nodemon": "*",
		"path": "*",
		"pino-pretty": "*",
		"rhea": "*",
		"rhea-promise": "*",
		"supertest": "*",
		"swagger-cli": "*",
		"testcontainers": "*"
	},
	"imports": {
		"#db-client": "./src/db/db-client.js",
		"#errors/*": "./src/errors/*.js",
		"#lib/*": "./src/lib/*.js",
		"#repositories/*": "./src/repositories/*.js"
	}
}
