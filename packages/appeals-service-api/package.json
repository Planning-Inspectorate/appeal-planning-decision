{
	"name": "appeals-service-api",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=18.0.0 <19.0.0",
		"npm": ">=9.0.0 <11.0.0"
	},
	"main": "src/main.js",
	"prisma": {
		"schema": "../database/src/schema.prisma"
	},
	"scripts": {
		"db:generate": "npx prisma generate",
		"gen-api-types": "node src/spec/write-api-types.js",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"start": "node ./",
		"start:dev": "npm run db:generate && nodemon -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
		"start:dev:debug": "npm run db:generate && nodemon --inspect=0.0.0.0 ./",
		"test": "jest --coverage",
		"test:cov": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --runInBand",
		"integration-test": "npm run db:generate && cross-env NODE_OPTIONS=--experimental-vm-modules jest --silent --config ./jest.developer-test.config.js",
		"prevalidate-spec": "node src/spec/write-api-spec.js",
		"validate-spec": "npx swagger-cli validate src/spec/spec.json",
		"postvalidate-spec": "rm -rf ./src/spec/spec.json"
	},
	"author": "Planning-Inspectorate <https://gov.uk/pins>",
	"dependencies": {
		"@azure/app-configuration": "^1.3.1",
		"@azure/identity": "^4.2.1",
		"@azure/service-bus": "^7.7.3",
		"@pins/business-rules": "file:../business-rules",
		"@pins/common": "file:../common",
		"@pins/database": "file:../database",
		"@prisma/client": "^5.11.0",
		"ajv": "^8.14.0",
		"ajv-errors": "^3.0.0",
		"applicationinsights": "^2.9.0",
		"axios": "^1.7.4",
		"body-parser": "^1.20.3",
		"compression": "^1.7.4",
		"date-fns": "^2.28.0",
		"express": "^4.19.2",
		"express-async-errors": "^3.1.1",
		"express-oauth2-jwt-bearer": "^1.6.0",
		"express-openapi-validator": "^5.1.2",
		"express-validator": "^7.0.1",
		"got": "^12.5.3",
		"joi": "^17.10.2",
		"jsonpath": "^1.1.1",
		"mongodb": "^3.7.3",
		"multer": "^1.4.5-lts.1",
		"node-cron": "^3.0.2",
		"pino": "^9.2.0",
		"pino-http": "^10.1.0",
		"prettier": "^2.8.8",
		"rhea": "^1.0.24",
		"secure-pin": "^1.0.14",
		"swagger-jsdoc": "^6.2.8",
		"swagger-typescript-api": "^13.0.3",
		"swagger-ui-express": "^4.3.0",
		"uuid": "^8.3.1"
	},
	"devDependencies": {
		"@shelf/jest-mongodb": "^1.3.4",
		"cross-env": "^7.0.3",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^24.4.0",
		"jest": "^29.4.0",
		"jest-junit": "^13.2.0",
		"jest-when": "^3.5.0",
		"mockserver-client": "^5.14.0",
		"mockserver-node": "^5.14.0",
		"nodemon": "^2.0.15",
		"path": "^0.12.7",
		"pino-pretty": "^11.2.1",
		"rhea-promise": "^2.1.0",
		"supertest": "^6.2.2",
		"swagger-cli": "^4.0.4",
		"testcontainers": "^9.8.0"
	},
	"imports": {
		"#db-client": "./src/db/db-client.js",
		"#errors/*": "./src/errors/*.js",
		"#lib/*": "./src/lib/*.js",
		"#repositories/*": "./src/repositories/*.js"
	}
}
