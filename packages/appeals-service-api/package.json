{
  "name": "appeals-service-api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0 <15.0.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "main": "src/main.js",
  "scripts": {
    "format": "prettier --write './**/*.js'",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "start": "node ./",
    "start:dev": "nodemon -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watchAll --runInBand --coverage",
    "test:tdd": "jest --watchAll --verbose",
    "documentation": "jest --coverage --reporters jest-html-reporters --coverageReporters html"
  },
  "author": "Foundry4 <www.foundry4.com>",
  "lint-staged": {
    "./**/*.js": "npm run lint:fix",
    "./**/*.{js, json}": "npm run format"
  },
  "dependencies": {
    "@pins/common": "file:../common",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-pino-logger": "^5.0.0",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.3",
    "neat-csv": "^5.2.0",
    "node-fetch": "^2.6.1",
    "notifications-node-client": "^5.1.0",
    "pino": "^6.7.0",
    "rhea": "^1.0.24",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.3.1",
    "yup": "^0.31.1",
    "jest": "^26.6.3",
    "jest-html-reporters": "^2.1.2",
    "jest-when": "^3.0.1",
    "@shelf/jest-mongodb": "^1.2.3"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "supertest": "^6.0.1"
  },
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "watchPathIgnorePatterns": ["globalConfig"],
    "collectCoverage": true,
    "collectCoverageFrom": ["./src/**/*.js"],
    "coverageReporters": ["json", "html", "text", "text-summary"],
    "coveragePathIgnorePatterns": ["node_modules", "./src/app.js", "./src/server.js"],
    "coverageDirectory": "../coverage",
    "coverageThreshold": {
      "global": {
        "branches": 92,
        "functions": 87,
        "lines": 86,
        "statements": 86
      }
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "setupFiles": ["./__tests__/setup-jest.js"]
  }
}
