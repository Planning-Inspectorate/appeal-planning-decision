{% extends "../../index.njk" %}
{% set title = "Enter appeal reference" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% block content %}
    <form method="post">
        <div class="govuk-form-group">
            {% if errorList %}
                {{ govukErrorSummary({
                                "titleText": "There is a problem",
                                "errorList": errorList
                                }) }}
            {% endif %}
            <label class="govuk-label govuk-label--l" for="postcode">Enter the postcode</label>
            {{ govukInput({
                    "classes": "govuk-input--width-5",
                    "hint": {
                        "text": "For example, BS1 6PN"
                    },
                    "id": "postcode",
                    "name": "postcode",
                    "inputmode": "numeric",
                    "spellcheck": false,
                    "errorMessage": inlineErrorMessage,
                    "value": value
                })
            }}
        </div>
        {{ govukButton({"text": "Continue", "type": "submit"}) }}
        <p class="govuk-body">
            <a href="enter-appeal-reference">Search with an appeal reference</a>
        </p>
    </form>
{% endblock content %}
