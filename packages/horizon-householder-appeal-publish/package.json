{
  "name": "horizon-householder-appeal-publish",
  "version": "0.0.0",
  "private": true,
  "description": "Publish appeal to Horizon",
  "main": "handler.js",
  "scripts": {
    "format": "prettier --write './**/*.js'",
    "lint": "eslint ./",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "documentation": "jest --coverage --reporters jest-html-reporters --coverageReporters html"
  },
  "author": "Foundry4 <www.foundry4.com>",
  "lint-staged": {
    "./**/*.js": "npm run lint -- --fix",
    "./**/*.{js, json}": "npm run format"
  },
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "jest-html-reporters": "^2.1.2",
    "jest-when": "^3.2.0",
    "prettier": "^2.1.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": ".",
    "testRegex": ".spec.js$",
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "./__setups__/date.js"
    ]
  }
}
