{
  "name": "appeal-reply-service-api",
  "version": "1.1.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0 <15.0.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "main": "src/main.js",
  "scripts": {
    "format": "prettier --write './**/*.js'",
    "lint": "eslint ./",
    "start": "node ./",
    "start:dev": "nodemon -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:tdd": "jest --watchAll --verbose"
  },
  "author": "Foundry4 <www.foundry4.com>",
  "lint-staged": {
    "./**/*.js": "npm run lint -- --fix",
    "./**/*.{js, json}": "npm run format"
  },
  "dependencies": {
    "@pins/common": "file:../common",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-pino-logger": "^5.0.0",
    "js-yaml": "^3.14.0",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.14",
    "neat-csv": "^5.2.0",
    "notifications-node-client": "^5.1.0",
    "pino": "^6.11.3",
    "rhea": "^2.0.2",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.5",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "jest-html-reporters": "^2.1.6",
    "jest-when": "^3.3.1",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": "src",
    "testRegex": ".spec.js$",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
