{% extends "layouts/lpa-dashboard/main-no-back-link.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}
  Questionnaire Submitted - Manage your appeals - GOV.UK
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Questionnaire submitted"
      }) }}

      <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

      <p class="govuk-body">We have sent you a confirmation email. You can download a copy of this questionnaire from the email.</p>
      <div class="govuk-inset-text">
        You need to email a copy of your questionnaire to the appellant. This must include a copy of any documents you uploaded.
      </div>

      <h2 class="govuk-heading-m">What happens next?</h2>

      <p class="govuk-body">
        We will review your evidence and will contact you if we need any further information.
      </p>

			{% if zipDownloadUrl %}
				<p class="govuk-body">
					<a href="{{ zipDownloadUrl }}">Download your documents (ZIP)</a>
				</p>
			{% endif %}

      <p class="govuk-body">
        <a data-cy="Feedback-Page-Body" href="/manage-appeals/your-appeals" class="govuk-link">View your planning appeals</a>
      </p>
    </div>
  </div>
{% endblock %}
