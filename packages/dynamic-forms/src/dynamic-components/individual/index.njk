{% extends layoutTemplate %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/label/macro.njk" import govukLabel %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = question.pageTitle + " - " + journeyTitle + " - GOV.UK" %}
{% set inputFields = question.inputFields %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block before_content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {% if errorSummary %}
            {{ govukErrorSummary({
                titleText: "There is a problem",
                errorList: errorSummary,
                attributes: {"data-cy": "error-wrapper"}
            }) }}
            {% endif %}
        </div>
    </div>

  {{ super() }}
{% endblock before_content %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form action="" method="post" novalidate>
                <input type="hidden" name="_csrf" value="{{_csrf}}">

                {% call govukFieldset({
                    legend: {
                        text: question.question,
                        classes: "govuk-fieldset__legend--l",
                        isPageHeading: true
                    }
                }) %}

                {% if question.description %}
                    <p class="govuk-body">
                        {{question.description}}
                    </p>
                {% endif %}

                {% if question.html %}
                    {% include question.html ignore missing %}
                {% endif %}

								<p class="govuk-hint">
										Enter the name of each individual appealing against the enforcement notice.
										You can add more names later.
								</p>


                    {{ govukInput({
                        label: {
                            text: 'First name',
                            classes: 'govuk-label',
                            for: 'firstName'
                        },
                        id: 'firstName',
                        name: 'firstName',
                        errorMessage: errors['firstName'] and {
                            text: errors['firstName'].msg
                        },
                        value: payload and payload[question.firstName]
                    }) }}

										{{ govukInput({
                        label: {
                            text: 'Last name',
                            classes: 'govuk-label',
                            for: inputField.lastName
                        },
                        id: 'lastName',
                        name: 'lastName',
                        errorMessage: errors['lastName'] and {
                            text: errors['lastName'].msg
                        },
                        value: payload and payload[question.lastName]
                    }) }}


                {% endcall %}

                {{ govukButton({
                    text: "Continue",
                    type: "submit",
                    attributes: { "data-cy":"button-save-and-continue"}
                }) }}

            </form>
        </div>
    </div>
{% endblock %}
