{% from "./summary-field.njk" import summaryField %}

{% macro boolToSentenceCaseField(value, attributes = {}) %}
  {% if value is null  %}
    {{ summaryField(value, attributes) }}
  {% else %}
    {% if value === true %}
      {{ summaryField('Yes', attributes) }}
    {% else %}
      {{ summaryField('No', attributes) }}
    {% endif %}
  {% endif %}
{% endmacro %}
