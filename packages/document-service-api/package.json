{
	"name": "document-service-api",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"main": "src/main.js",
	"prisma": {
		"schema": "../database/src/schema.prisma"
	},
	"scripts": {
		"db:generate": "npx prisma generate",
		"lint": "eslint ./",
		"start": "node ./",
		"start:dev": "npm run db:generate && nodemon ./ | pino-pretty -tlc",
		"start:dev:debug": "npm run db:generate && nodemon --inspect=0.0.0.0 ./",
		"seed:dev": "node ./dev/seed.js",
		"test": "npm run db:generate && jest --verbose",
		"test:cov": "npm run db:generate && jest --verbose --coverage"
	},
	"author": "Planning-Inspectorate <https://gov.uk/pins>",
	"dependencies": {
		"@azure/storage-blob": "*",
		"@pins/common": "file:../common",
		"@pins/database": "file:../database",
		"@prisma/client": "*",
		"applicationinsights": "*",
		"archiver": "*",
		"body-parser": "*",
		"express": "*",
		"express-async-errors": "*",
		"express-oauth2-jwt-bearer": "*",
		"js-yaml": "*",
		"lodash.kebabcase": "*",
		"multer": "*",
		"pino": "*",
		"pino-http": "*",
		"pins-data-model": "*",
		"swagger-jsdoc": "*",
		"swagger-ui-express": "*",
		"uuid": "*"
	},
	"devDependencies": {
		"dotenv": "*",
		"jest": "*",
		"jest-each": "*",
		"jest-junit": "*",
		"nodemon": "*",
		"pino-pretty": "*",
		"supertest": "*",
		"testcontainers": "*"
	},
	"imports": {
		"#config/*": "./src/configuration/*.js",
		"#lib/*": "./src/lib/*.js"
	}
}
