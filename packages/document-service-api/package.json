{
	"name": "document-service-api",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0 <21.0.0",
		"npm": ">=9.0.0 <11.0.0"
	},
	"main": "src/main.js",
	"prisma": {
		"schema": "../database/src/schema.prisma"
	},
	"scripts": {
		"db:generate": "npx prisma generate",
		"lint": "eslint ./",
		"start": "node ./",
		"start:dev": "npm run db:generate && nodemon ./ | pino-pretty -tlc",
		"start:dev:debug": "npm run db:generate && nodemon --inspect=0.0.0.0 ./",
		"seed:dev": "node ./dev/seed.js",
		"integration-test": "npm run db:generate && jest"
	},
	"author": "Planning-Inspectorate <https://gov.uk/pins>",
	"dependencies": {
		"@azure/app-configuration": "*",
		"@azure/storage-blob": "*",
		"@pins/business-rules": "file:../business-rules",
		"@pins/common": "file:../common",
		"@prisma/client": "*",
		"applicationinsights": "*",
		"body-parser": "*",
		"express": "*",
		"express-async-errors": "*",
		"express-oauth2-jwt-bearer": "*",
		"js-yaml": "*",
		"multer": "*",
		"pino": "*",
		"pino-http": "*",
		"pins-data-model": "*",
		"swagger-jsdoc": "*",
		"swagger-ui-express": "*",
		"uuid": "*"
	},
	"devDependencies": {
		"dotenv-cli": "*",
		"jest": "*",
		"jest-each": "*",
		"jest-junit": "*",
		"jest-when": "*",
		"nodemon": "*",
		"pino-pretty": "*",
		"supertest": "*",
		"testcontainers": "*"
	},
	"imports": {
		"#config/*": "./src/configuration/*.js",
		"#lib/*": "./src/lib/*.js"
	}
}
