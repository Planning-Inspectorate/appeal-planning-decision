{
	"name": "document-service-api",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"main": "src/main.js",
	"scripts": {
		"lint": "eslint ./",
		"start": "node ./",
		"start:dev": "nodemon --watch ./ --watch ../business-rules/src --watch ../common/src --watch ../database/src --ext js,ts,json",
		"start:dev:debug": "nodemon --inspect=0.0.0.0 --watch ./ --watch ../business-rules/src --watch ../common/src --watch ../database/src --ext js,ts,json",
		"seed:dev": "node ./dev/seed.js",
		"test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --ci --verbose",
		"test:cov": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --ci --verbose --coverage"
	},
	"author": "Planning-Inspectorate <https://gov.uk/pins>",
	"dependencies": {
		"@azure/storage-blob": "*",
		"@pins/common": "^0.0.0",
		"@pins/database": "^0.0.0",
		"@planning-inspectorate/data-model": "*",
		"@prisma/client": "*",
		"applicationinsights": "*",
		"archiver": "*",
		"body-parser": "*",
		"express": "*",
		"express-async-errors": "*",
		"express-oauth2-jwt-bearer": "*",
		"js-yaml": "*",
		"lodash.kebabcase": "*",
		"multer": "*",
		"pino": "*",
		"pino-http": "*",
		"swagger-jsdoc": "*",
		"swagger-ui-express": "*",
		"uuid": "*"
	},
	"devDependencies": {
		"dotenv": "*",
		"jest": "*",
		"jest-each": "*",
		"jest-junit": "*",
		"nodemon": "*",
		"pino-pretty": "*",
		"supertest": "*",
		"testcontainers": "*"
	},
	"imports": {
		"#config/*": "./src/configuration/*.js",
		"#lib/*": "./src/lib/*.js"
	}
}
