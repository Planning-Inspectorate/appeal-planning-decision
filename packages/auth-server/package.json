{
	"name": "@pins/appeals-auth-server",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"description": "Auth server for appeals",
	"engines": {
		"node": ">=18.0.0 <19.0.0",
		"npm": ">=9.0.0 <10.0.0"
	},
	"prisma": {
		"schema": "../database/src/schema.prisma"
	},
	"scripts": {
		"db:generate": "npx prisma generate",
		"lint": "eslint ./",
		"gen-secret": "node ./gen-client-secret.js",
		"gen-keys": "node ./gen-keys.js",
		"start": "node ./src/main.js",
		"start:dev": "npm run db:generate && nodemon ./src/main.js | pino-pretty -tlc",
		"start:dev:debug": "npm run db:generate && nodemon --inspect=0.0.0.0 ./src/main.js",
		"test": "jest --passWithNoTests"
	},
	"dependencies": {
		"@pins/database": "file:../database",
		"applicationinsights": "^2.9.0",
		"express-pino-logger": "^5.0.0",
		"jose": "^5.2.1",
		"oidc-provider": "^8.4.5",
		"pino": "^6.14.0"
	},
	"devDependencies": {
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^24.4.0",
		"jest": "^29.4.0",
		"jest-junit": "^13.2.0",
		"pino-pretty": "^4.8.0"
	}
}
