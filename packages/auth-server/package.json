{
	"name": "appeals-auth-server",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"description": "Auth server for appeals",
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"prisma": {
		"schema": "../database/src/schema.prisma"
	},
	"scripts": {
		"db:generate": "npx prisma generate",
		"lint": "eslint ./",
		"gen-client": "node ./dev/gen-client.js",
		"gen-keys": "node ./dev/gen-keys.js",
		"start": "node ./src/main.js",
		"start:dev": "npm run db:generate && nodemon ./src/main.js | pino-pretty -tlc",
		"start:dev:debug": "npm run db:generate && nodemon --inspect=0.0.0.0 ./src/main.js",
		"test": "npm run db:generate && cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose ${COVERAGE:+--coverage}"
	},
	"dependencies": {
		"@pins/common": "file:../common",
		"@pins/database": "file:../database",
		"@prisma/client": "*",
		"applicationinsights": "*",
		"express": "*",
		"joi": "*",
		"oidc-provider": "*",
		"pino": "*",
		"pino-http": "*"
	},
	"devDependencies": {
		"cross-env": "*",
		"jest": "*",
		"jest-junit": "*",
		"jose": "*",
		"pino-pretty": "*",
		"supertest": "*",
		"testcontainers": "*"
	},
	"imports": {
		"#lib/*": "./src/lib/*.js"
	}
}
