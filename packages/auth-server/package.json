{
	"name": "appeals-auth-server",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"description": "Auth server for appeals",
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"scripts": {
		"lint": "eslint ./",
		"gen-client": "node ./dev/gen-client.js",
		"gen-keys": "node ./dev/gen-keys.js",
		"start": "node ./src/main.js",
		"start:dev": "nodemon ./src/main.js | pino-pretty -tlc",
		"start:dev:debug": "nodemon --inspect=0.0.0.0 ./src/main.js",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --ci --verbose",
		"test:cov": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --ci --verbose --coverage"
	},
	"dependencies": {
		"@pins/common": "^0.0.0",
		"@pins/database": "^0.0.0",
		"@prisma/client": "*",
		"applicationinsights": "*",
		"express": "*",
		"joi": "*",
		"oidc-provider": "*",
		"pino": "*",
		"pino-http": "*"
	},
	"devDependencies": {
		"cross-env": "*",
		"jest": "*",
		"jest-junit": "*",
		"jose": "*",
		"pino-pretty": "*",
		"supertest": "*",
		"testcontainers": "*"
	},
	"imports": {
		"#lib/*": "./src/lib/*.js"
	}
}
