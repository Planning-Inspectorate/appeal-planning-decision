{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["jest", "prettier"],
  "root": true,
  "ignorePatterns": ["node_modules/**", "src/public/javascript/**", "dist/**", "webpack.**"],
  "rules": {
    "prettier/prettier": "error"
  },
  "env": {
    "es2021": true,
    "node": true,
    "jest": true,
    "browser": true
  }
}
