{
	"name": "forms-web-app",
	"version": "1.19.0",
	"private": true,
	"engines": {
		"node": ">=18.0.0 <19.0.0",
		"npm": ">=9.0.0 <11.0.0"
	},
	"scripts": {
		"prebuild": "rm -Rf ./dist",
		"build": "npm run build:client && npm run build:sass && npm run build:app",
		"build:app": "cp -Rf ./src ./dist && find ./dist -name '*.test.js' -delete",
		"build:client": "webpack --config webpack.prod.js",
		"build:sass": "sass src/sass/main.scss:src/public/stylesheets/main.css --style=compressed --load-path=./ --no-source-map",
		"start": "node dist/server.js",
		"start:dev:client": "webpack --config webpack.dev.js --watch",
		"start:dev": "npm-run-all --parallel start:dev:server start:dev:client",
		"start:dev:debug": "npm-run-all --parallel start:dev:server:debug start:dev:client",
		"start:dev:server": "nodemon src/server.js | pino-pretty -tlc",
		"start:dev:server:debug": "nodemon --inspect=0.0.0.0 src/server.js",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"test": "jest",
		"test:update": "jest --updateSnapshot",
		"test:cov": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --runInBand"
	},
	"dependencies": {
		"@azure/app-configuration": "^1.3.1",
		"@ministryofjustice/frontend": "^1.6.4",
		"@pins/business-rules": "file:../business-rules",
		"@pins/common": "file:../common",
		"accessible-autocomplete": "^2.0.3",
		"applicationinsights": "^2.9.0",
		"clamscan": "^2.1.2",
		"compression": "^1.7.4",
		"connect-mongodb-session": "^2.4.1",
		"cookie-parser": "^1.4.6",
		"date-fns": "^2.28.0",
		"date-fns-tz": "^2.0.0",
		"escape-html": "^1.0.3",
		"express": "^4.19.2",
		"express-async-errors": "^3.1.1",
		"express-fileupload": "^1.4.3",
		"express-session": "^1.17.3",
		"express-validator": "^6.14.0",
		"form-data": "^3.0.0",
		"govuk-frontend": "^3.15.0",
		"helmet": "^7.1.0",
		"jsonpath": "^1.1.1",
		"jspdf": "^2.5.1",
		"lusca": "^1.6.1",
		"node-fetch": "^2.6.7",
		"nunjucks": "^3.2.2",
		"nunjucks-date-filter": "^0.1.1",
		"pino": "^9.2.0",
		"pino-http": "^10.1.0",
		"sass": "^1.49.0",
		"uuid": "^8.3.1"
	},
	"devDependencies": {
		"@testing-library/dom": "^7.31.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/user-event": "^12.8.3",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^26.5.3",
		"jest": "^29.4.0",
		"jest-environment-jsdom": "^28.1.1",
		"jest-fetch-mock": "^3.0.3",
		"jest-junit": "^13.2.0",
		"nodemon": "^2.0.21",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^11.2.1",
		"sinon": "^13.0.0",
		"webpack": "^5.76.1",
		"webpack-cli": "^4.9.2",
		"webpack-merge": "^5.8.0"
	},
	"imports": {
		"#lib/*": "./src/lib/*.js",
		"#middleware/*": "./src/middleware/*.js",
		"#utils/*": "./src/utils/*.js"
	}
}
