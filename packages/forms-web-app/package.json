{
	"name": "forms-web-app",
	"version": "1.19.0",
	"private": true,
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"scripts": {
		"prebuild": "rm -Rf ./dist",
		"build": "npm run build:client && npm run build:sass && npm run build:app",
		"build:app": "cp -Rf ./src ./dist && find ./dist -name '*.test.js' -delete",
		"build:client": "webpack --config webpack.prod.js",
		"build:sass": "sass src/sass/main.scss:src/public/stylesheets/main.css --style=compressed --load-path=./ --no-source-map",
		"start": "node dist/server.js",
		"start:dev:client": "webpack --config webpack.dev.js --watch",
		"start:dev": "npm-run-all --parallel start:dev:server start:dev:client",
		"start:dev:debug": "npm-run-all --parallel start:dev:server:debug start:dev:client",
		"start:dev:server": "nodemon src/server.js | pino-pretty -tlc",
		"start:dev:server:debug": "nodemon --inspect=0.0.0.0 src/server.js",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"test": "jest --coverage --verbose",
		"test:update": "jest --updateSnapshot",
		"test:watch": "jest --watchAll --runInBand"
	},
	"dependencies": {
		"@ministryofjustice/frontend": "*",
		"@pins/business-rules": "file:../business-rules",
		"@pins/common": "file:../common",
		"accessible-autocomplete": "*",
		"applicationinsights": "*",
		"compression": "*",
		"connect-mongodb-session": "*",
		"cookie-parser": "*",
		"date-fns": "*",
		"date-fns-tz": "*",
		"escape-html": "*",
		"express": "*",
		"express-async-errors": "*",
		"express-fileupload": "*",
		"express-session": "*",
		"express-validator": "^6.14.0",
		"form-data": "*",
		"govuk-frontend": "*",
		"helmet": "*",
		"lusca": "*",
		"node-fetch": "*",
		"nunjucks": "*",
		"nunjucks-date-filter": "*",
		"pino": "*",
		"pino-http": "*",
		"pins-data-model": "*",
		"uuid": "*"
	},
	"devDependencies": {
		"@testing-library/dom": "*",
		"@testing-library/jest-dom": "*",
		"@testing-library/user-event": "*",
		"jest": "*",
		"jest-environment-jsdom": "*",
		"jest-fetch-mock": "*",
		"jest-junit": "*",
		"nodemon": "*",
		"npm-run-all": "*",
		"openid-client": "*",
		"pino-pretty": "*",
		"sass": "*",
		"sinon": "*",
		"webpack": "*",
		"webpack-cli": "*",
		"webpack-merge": "*"
	},
	"imports": {
		"#lib/*": "./src/lib/*.js",
		"#middleware/*": "./src/middleware/*.js",
		"#utils/*": "./src/utils/*.js"
	}
}
