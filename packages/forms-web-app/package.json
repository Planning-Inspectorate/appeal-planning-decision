{
  "name": "forms-web-app",
  "version": "1.19.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0 <15.0.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "scripts": {
    "prebuild": "rm -Rf ./dist",
    "build": "npm run build:client && npm run build:sass && npm run build:app",
    "build:app": "cp -Rf ./src ./dist",
    "build:client": "webpack --config webpack.prod.js",
    "build:sass": "sass src/sass/main.scss:src/public/stylesheets/main.css --style=compressed --load-path=./ --no-source-map",
    "start": "node dist/server.js",
    "start:dev": "npm-run-all --parallel start:dev:server start:dev:client",
    "start:dev:debug": "npm-run-all --parallel start:dev:server:debug start:dev:client",
    "start:dev:server": "nodemon src/server.js | pino-pretty -tlc",
    "start:dev:server:debug": "node --inspect-brk=0.0.0.0 src/server.js",
    "start:dev:client": "webpack --config webpack.dev.js --watch",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "format": "prettier --write './**/*.js'",
    "postinstall": "patch-package",
    "test": "jest --coverage --maxWorkers=4",
    "test:watch": "jest --watchAll --runInBand --coverage",
    "documentation": "jest --bail --coverage --coverageReporters=cobertura --reporters=default --reporters=jest-junit"
  },
  "lint-staged": {
    "./**/*.js": "npm run lint:fix",
    "./**/*.{js, json}": "npm run format"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.2.0",
    "@pins/business-rules": "file:../business-rules",
    "@pins/common": "file:../common",
    "accessible-autocomplete": "^2.0.3",
    "compression": "^1.7.4",
    "connect-mongodb-session": "^2.4.1",
    "cookie-parser": "~1.4.4",
    "date-fns": "^2.23.0",
    "express": "~4.16.1",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.2.0",
    "express-pino-logger": "^5.0.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.12.1",
    "file-type": "^16.5.3",
    "form-data": "^3.0.0",
    "govuk-frontend": "^3.13.0",
    "http-errors": "~1.6.3",
    "jest-junit": "^12.2.0",
    "lusca": "^1.6.1",
    "node-fetch": "^2.6.2",
    "notifications-node-client": "^5.1.0",
    "nunjucks": "^3.2.2",
    "nunjucks-date-filter": "^0.1.1",
    "pino": "^6.13.2",
    "pino-http": "^5.7.0",
    "pins-clamav": "^1.0.0",
    "pins-mime-validation": "^1.0.0",
    "sass": "^1.39.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/user-event": "^12.8.3",
    "cross-blob": "^2.0.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^26.6.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-html-reporters": "^2.1.6",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.3.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "^5.8.0"
  }
}
