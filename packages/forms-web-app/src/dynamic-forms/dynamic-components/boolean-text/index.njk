{% extends layoutTemplate %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% set title = question.pageTitle + " - " + journeyTitle + " - GOV.UK" %}

{% set options = [] %}

{% for option in question.options %}
  {% set options = (options.push({
    value: option.value,
    text: option.text,
    attributes: { "data-cy": "answer-" + option.value },
    checked: answer == option.value,      
    conditional: {
      html: option.conditional.html,
      value: option.conditional.fieldName
    }
  }), options) %}
{% endfor %}

{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block before_content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}
    </div>
  </div>

  {{ super() }}
{% endblock before_content %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{question.question}}</h1>
      <p class="govuk-body">{{question.description}}</p>
      {% if question.html %}
        {% include question.html ignore missing %}
      {% endif %}
      <form action="" method="post" novalidate>
        {{ govukRadios({
          classes: "govuk-radios",
          idPrefix: question.fieldName,
          name: question.fieldName,
          errorMessage: errors[question.fieldName] and {
            text: errors[question.fieldName].msg
          },
          fieldset: {
            legend: {
              text: question.label,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: options
        }) }}
        {{ govukButton({
          text: "Continue",
          type: "submit",
          attributes: { "data-cy":"button-save-and-continue"}
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
