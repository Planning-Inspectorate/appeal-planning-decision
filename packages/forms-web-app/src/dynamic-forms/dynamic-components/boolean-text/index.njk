{% extends "layouts/no-banner-link/main.njk" %}

{% from "../macros/bullet-list.njk" import bulletList %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% set title= question.question + " - Appeal a planning decision - GOV.UK" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% if question.conditional %}
  {% set conditionalDetails %}
    {{ govukTextarea({
      name: question.conditionalId,
      id: question.conditionalId,
      label: {
        text: question.conditional
      }
    }) }}
  {% endset %}
{% endif %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}

      <h1 class="govuk-heading-l">{{question.question}}</h1>
      <p class="govuk-body">{{question.description}}</p>
      {% if question.points %}
        {{bulletList(question.points)}}
      {% endif %}

      <form action="" method="post" novalidate>
        <span class="govuk-caption-l">{{ question.caption }}</span>
        {{ govukRadios({
          classes: "govuk-radios",
          idPrefix: question.fieldName,
          name: question.fieldName,
          errorMessage: errors[question.fieldName] and {
            text: errors[question.fieldName].msg
          },
          fieldset: {
            legend: {
              text: question.subQuestion,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes",
              attributes: { "data-cy": "answer-yes" },
              checked: answer == "yes",
              conditional: {
                html: conditionalDetails
              }
            },
            {
              value: "no",
              text: "No",
              attributes: { "data-cy": "answer-no" },
              checked: answer == "no"
            }
          ]
        }) }}
        {{ govukButton({
          text: "Continue",
          type: "submit",
          attributes: { "data-cy":"button-save-and-continue"}
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
