{% extends layoutTemplate %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = "Declaration - Appeal a planning decision  - GOV.UK" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block before_content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}
    </div>
  </div>

  {{ super() }}
{% endblock before_content %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Declaration</h1>
			<p class="govuk-!-margin-bottom-2">By submitting the appeal, you confirm that you:</p>
			<ul class="govuk-list govuk-list--bullet">
				<li>
					understand that this is your only opportunity to submit the appeal
				</li>
				<li>
					understand that if you have not included all the information weâ€™ve requested, we may not be able to progress your appeal
				</li>
				<li>
					have read and agree to our <a href='https://www.gov.uk/government/publications/planning-inspectorate-privacy-notices/customer-privacy-notice' class="govuk-link">privacy notice</a>
				</li>
			</ul>
			<p class="govuk-body">
				You also confirm that the details you are providing are correct.
			</p>

			<form action method="post">
				<input type="hidden" name="_csrf" value="{{_csrf}}">
          {{ govukButton({
            text: "Accept and submit",
            type: "submit",
            attributes: { "data-cy":"submit-appeal"}
            })
					}}
      </form>

    </div>
  </div>
{% endblock %}
