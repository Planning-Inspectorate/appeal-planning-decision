{% extends layoutTemplate %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title= question.pageTitle + " - Appeal a planning decision - GOV.UK" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% set addressLine1= question.fieldName + "_addressLine1" %}
{% set addressLine2= question.fieldName + "_addressLine2" %}
{% set townCity= question.fieldName + "_townCity" %}
{% set county= question.fieldName + "_county" %}
{% set postcode= question.fieldName + "_postcode" %}

{% block before_content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {% if errorSummary %}
            {{ govukErrorSummary({
                titleText: "There is a problem",
                errorList: errorSummary,
                attributes: {"data-cy": "error-wrapper"}
            }) }}
            {% endif %}
        </div>
    </div>

  {{ super() }}
{% endblock before_content %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">  
            <form action="" method="post" novalidate>
<input type="hidden" name="_csrf" value="{{_csrf}}">
                {% call govukFieldset({
                legend: {
                    text: question.question,
                    classes: "govuk-fieldset__legend--l",
                    isPageHeading: true
                }
                }) %}

                {{ govukInput({
                    label: {
                    text: "Address line 1"
                    },
                    id: "address-line-1",
                    name: addressLine1,
                    autocomplete: "address-line1",
                    errorMessage: errors[addressLine1] and {
                        text: errors[addressLine1].msg 
                    }
                }) }}

                {{ govukInput({
                    label: {
                    text: "Address line 2 (optional)"
                    },
                    id: "address-line-2",
                    name: addressLine2,
                    autocomplete: "address-line2",
                    errorMessage: errors[addressLine2] and {
                        text: errors[addressLine2].msg 
                    }
                }) }}

                {{ govukInput({
                    label: {
                    text: "Town or city"
                    },
                    classes: "govuk-!-width-two-thirds",
                    id: "address-town",
                    name: townCity,
                    autocomplete: "address-level2",
                    errorMessage: errors[townCity] and {
                        text: errors[townCity].msg 
                    }
                }) }}

                {{ govukInput({
                    label: {
                    text: "County (optional)"
                    },
                    classes: "govuk-!-width-two-thirds",
                    id: "address-county",
                    name: county,
                    autocomplete: "address-level1",
                    errorMessage: errors[county] and {
                        text: errors[county].msg 
                    }
                }) }}

                {{ govukInput({
                    label: {
                    text: "Postcode"
                    },
                    classes: "govuk-input--width-10",
                    id: "address-postcode",
                    name: postcode,
                    autocomplete: "postal-code",
                    errorMessage: errors[postcode] and {
                        text: errors[postcode].msg 
                    }
                }) }}
                {{ govukButton({
                text: "Continue",
                type: "submit",
                attributes: { "data-cy":"button-save-and-continue"}
                }) }}
                {% endcall %}
            </form>
        </div>
    </div>
{% endblock %}
