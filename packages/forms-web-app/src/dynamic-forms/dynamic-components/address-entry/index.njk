{% extends layoutTemplate %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title= question.pageTitle + " - Appeal a planning decision - GOV.UK" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}


{% block before_content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {% if errorSummary %}
            {{ govukErrorSummary({
                titleText: "There is a problem",
                errorList: errorSummary,
                attributes: {"data-cy": "error-wrapper"}
            }) }}
            {% endif %}
        </div>
    </div>

  {{ super() }}
{% endblock before_content %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">  
            <form action="" method="post" novalidate>
                {% call govukFieldset({
                legend: {
                    text: question.question,
                    classes: "govuk-fieldset__legend--l",
                    isPageHeading: true
                }
                }) %}

                {{ govukInput({
                    label: {
                    text: "Address line 1"
                    },
                    id: "address-line-1",
                    name: question.fieldName + "_addressLine1",
                    autocomplete: "address-line1"
                }) }}

                {{ govukInput({
                    label: {
                    text: "Address line 2 (optional)"
                    },
                    id: "address-line-2",
                    name: question.fieldName + "_addressLine2",
                    autocomplete: "address-line2"
                }) }}

                {{ govukInput({
                    label: {
                    text: "Town or city"
                    },
                    classes: "govuk-!-width-two-thirds",
                    id: "address-town",
                    name: question.fieldName + "_townCity",
                    autocomplete: "address-level2"
                }) }}

                {{ govukInput({
                    label: {
                    text: "Postcode"
                    },
                    classes: "govuk-input--width-10",
                    id: "address-postcode",
                    name: question.fieldName + "_postcode",
                    autocomplete: "postal-code"
                }) }}
                {{ govukButton({
                text: "Continue",
                type: "submit",
                attributes: { "data-cy":"button-save-and-continue"}
                }) }}
                {% endcall %}
            </form>
        </div>
    </div>
{% endblock %}
