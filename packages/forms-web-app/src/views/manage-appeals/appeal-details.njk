{% extends "layouts/lpa-dashboard/main-no-back-link.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "../macros/summary-field.njk" import summaryField %}
{% from "../macros/address.njk" import address %}
{% set title="Your appeals - Manage appeals - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
<style>
  .appeal-details .govuk-summary-list__key,
  .appeal-details .govuk-summary-list__value,
  .appeal-details .govuk-summary-list__actions {
    padding-top: 0;
    padding-bottom: 0;
  }
</style>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {{ govukBackLink({
        text: "Back to appeals",
        href: "{{dashboardLink}}"
      }) }}
      {% set html %}
        <p class="govuk-notification-banner__heading">
          You have until 11:59 on {{questionnaireDueDate}} to:
          <ul class="govuk-list govuk-list--bullet">
            <li>
              <a class="govuk-notification-banner__link" href="/manage/questionnaire">Submit questionnaire</a>
            </li>
          </ul>
        </p>
      {% endset %}

      {{ govukNotificationBanner({
        html: html
      }) }}

        <h1 class="govuk-heading-l">
          Appeal {{appeal.caseReference}}
        </h1>

        {% set siteAddress = 
          { 
            addressLine1: appeal.siteAddressLine1,
            addressLine2: appeal.siteAddressLine2,
            town: appeal.siteAddressTown,
            county: appeal.siteAddressCounty, 
            postcode: appeal.siteAddressPostcode
          }
        %}

        {% set siteAddressRow = {
          key: { text: summaryField(
            "Appeal site",
            { "data-cy": "site-address-label" }
          ) },
          value: { text: summaryField(
            address(siteAddress, true),
            { "data-cy": "site-address" }
          ) }
        } %}

        {{ govukSummaryList({
          classes: 'appeal-details govuk-summary-list--no-border',
          rows: [
            {
              key: {
                text: "Appeal type"
              },
              value: {
                text: appeal.appealType
              }
            },
            siteAddressRow,
            {
              key: {
                text: "Applicant"
              },
              value: {
                text: appeal.appellant.firstName + " " + appeal.appellant.lastName
              }
            },
            {
              key: {
                text: "Application number"
              },
              value: {
                text: appeal.LPAApplicationReference
              }
            }
          ]
        }) }}
      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
      </div>
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
          Appeal Submission
        </h1>

        {{ govukSummaryList({
          rows: [
            {
              key: {
                text: "Agent or representative"
              },
              value: {
                text: appeal.agent
              }
            },
            {
              key: {
                text: "Site ownership"
              },
              value: {
                text: appeal.ownershipCertificate
              }
            },
            {
              key: {
                text: "Site visible from a public road or footpath"
              },
              value: {
                text: appeal.isSiteVisible
              }
            },
            {
              key: {
                text: "Health and safety issues"
              },
              value: {
                html: appeal.doesSiteHaveHealthAndSafetyIssues + "<br>" + appeal.healthAndSafetyIssuesDetails 
              }
            },
            {
              key: {
                text: "Application form"
              },
              value: {
                text: ["<a href='", applicationForm.documentURI, "'>", applicationForm.filename, "</a>" ] | join | safe
              }
            }
          ]
        }) }}
      </div>
  </div>

  
{% endblock %}
