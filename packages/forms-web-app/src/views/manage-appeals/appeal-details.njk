{% extends "layouts/lpa-dashboard/main-no-back-link.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% set title="Your appeals - Manage appeals - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
<style>
  .appeal-details .govuk-summary-list__key,
  .appeal-details .govuk-summary-list__value,
  .appeal-details .govuk-summary-list__actions {
    padding-top: 0;
    padding-bottom: 0;
  }
</style>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukBackLink({
        text: "Back to appeals",
        href: "{{dashboardLink}}"
      }) }}
      {% set html %}
        <p class="govuk-notification-banner__heading">
          You have until 11:59 on x to:
          <ul class="govuk-list govuk-list--bullet">
            <li>
              <a class="govuk-notification-banner__link" href="/manage/questionnaire">Submit questionnaire</a>
            </li>
          </ul>
        </p>
      {% endset %}

      {{ govukNotificationBanner({
        html: html
      }) }}
        <p class="govuk-body">
            <a href="{{dashboardLink}}" class="govuk-link">Dashboard</a>
        </p>
        <h1 class="govuk-heading-l">
          Appeal {{appeal.caseReference}}
        </h1>
        {{ govukSummaryList({
          classes: 'appeal-details govuk-summary-list--no-border govuk-!-margin-bottom-0',
          rows: [
            {
              key: {
                text: "Appeal type"
              },
              value: {
                text: appeal.appealType
              }
            },
            {
              key: {
                text: "Appeal site"
              },
              value: {
                text: [appeal.siteAddressLine1, appeal.siteAddressLine2, appeal.siteAddressTown, appeal.siteAddressCounty, appeal.siteAddressPostcode]
              }
            },
            {
              key: {
                text: "Applicant"
              },
              value: {
                text: appeal.appellant.firstName + " " + appeal.appellant.lastName
              }
            },
            {
              key: {
                text: "Application number"
              },
              value: {
                text: appeal.LPAApplicationReference
              }
            },
            {
              key: {
                text: "Application form"
              },
              value: {
                text: ["<a href='", applicationForm.documentURI, "'>", applicationForm.filename, "</a>" ] | join | safe
              }
            }
          ]
        }) }}

        <h1 class="govuk-heading-l">
          Appeal Submission
        </h1>

        {{ govukSummaryList({
          classes: 'appeal-details govuk-summary-list--no-border govuk-!-margin-bottom-0',
          rows: [
            {
              key: {
                text: "Agent or representative"
              },
              value: {
                text: appeal.agent
              }
            },
            {
              key: {
                text: "Site ownership"
              },
              value: {
                text: appeal.ownershipCertificate
              }
            },
            {
              key: {
                text: "Site visible from a public road or footpath"
              },
              value: {
                text: appeal.isSiteVisible
              }
            },
            {
              key: {
                text: "Health and safety issues"
              },
              value: {
                text: [appeal.doesSiteHaveHealthAndSafetyIssues appeal.healthAndSafetyIssuesDetails]
              }
            }
          ]
        }) }}
      </div>
  </div>

  
{% endblock %}
