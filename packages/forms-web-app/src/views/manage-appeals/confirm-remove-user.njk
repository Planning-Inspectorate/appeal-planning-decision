{% extends "layouts/lpa-dashboard/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title="Confirm you want to remove this user - Manage appeals - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Confirm you want to remove this user</h1>
        <p class="govuk-body-l">{{removeUserEmailAddress}}</p>
        <p class="govuk-body">When you remove a user, the email address will not have access to manage appeals and will not receive appeal notifications.</p>
        <form action="" method="post" novalidate>
          {{ govukButton({
            text: "Remove user",
            type: "submit",
            attributes: { "data-cy":"button-save-and-continue"}
          }) }}
        </form>
    </div>
  </div>
{% endblock %}