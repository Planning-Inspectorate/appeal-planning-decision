{% extends "govuk/template.njk" %}

{% from "includes/pins-header/macro.njk" import pinsHeader %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{% block head %}
  {% include "includes/head.njk" %}
{% endblock %}

{% block header %}
  {% include "includes/cookie-banner.njk" %}

  {{ pinsHeader({
    homepageUrl: "/manage-appeals/your-appeals",
    productName: 'Manage your appeals'
  }) }}
{% endblock %}

{% block bodyStart %}
  {% include "includes/body-start.njk" %}
{% endblock %}

{% set mainClasses = mainClasses | default("govuk-main-wrapper--auto-spacing") %}

{% block main %}
  <div class="govuk-width-container govuk-body {{ containerClasses }}">
    {% block phaseBanner %}
      {{ govukPhaseBanner({
        tag: {
          text: "beta"
        },
        attributes: {
          role: "region",
          "aria-label": "phase-banner"
        },
				html: 'This is a new service â€“ your <a class="govuk-link"
          data-cy="Feedback"
          href="https://forms.office.com/pages/responsepage.aspx?id=mN94WIhvq0iTIpmM5VcIjYt1ax_BPvtOqhVjfvzyJN5UNzVFTElMSEJIWlhXWkZFM1E1WDg3RTFPUy4u&route=shorturl">feedback</a> will help us to improve it.'
			}) }}
    {% endblock %}

    <main id="main-content" role="main"{% if mainLang %} lang="{{ mainLang }}"{% endif %} class="govuk-main-wrapper {{ mainClasses }}">
      {% block before_content %} {% endblock before_content %}
      {% block content %}{% endblock %}
    </main>
  </div>
{% endblock %}

{% block footer %}
  {% include "components/footer/footer.njk" %}
{% endblock %}

{% block bodyEnd %}
  {% block scripts %}
    {% include "includes/scripts.njk" %}
    {% block pageScripts %}{% endblock %}
  {% endblock %}
{% endblock %}
