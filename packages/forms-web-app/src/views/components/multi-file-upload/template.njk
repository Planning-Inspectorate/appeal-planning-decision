<div class="moj-multi-file-upload {{- ' ' + params.classes if params.classes}}" {%- for attribute, value in params.attributes -%} {{ attribute }}="{{ value }}"{% endfor %}>
  <div class="moj-multi-file__uploaded-files" aria-live="polite">
    <div class="moj-multi-file__uploaded-files-container {% if (not params.uploadedFiles.items) or params.uploadedFiles.items.length == 0 %}moj-hidden{% endif%}">
			<h2 class="govuk-heading-m" id="{{params.name}}-uploaded-files-heading">{{ params.uploadedFiles.heading.html | safe if params.uploadedFiles.heading.html else params.uploadedFiles.heading.text }}</h2>
			<ul class="govuk-summary-list moj-multi-file-upload__list">
				{% if params.uploadedFiles.items and params.uploadedFiles.items.length > 0 %}
					{% for item in params.uploadedFiles.items %}
						<li
							class="govuk-summary-list__row moj-multi-file-upload__row moj-multi-file-upload__list-item"
							data-fileinfo-name="{{ item.originalFileName }}"
							data-fileinfo-size="{{ item.size }}"
						>
							<div class="govuk-summary-list__value moj-multi-file-upload__message">
								<span class="moj-multi-file-upload__filename">{{- item.originalFileName | safe if item.name else item.message.text -}}</span>
							</div>
							<div class="govuk-summary-list__actions moj-multi-file-upload__actions">
								<button
									class="moj-multi-file-upload__delete govuk-link govuk-!-margin-bottom-0"
									type="button"
									name="delete"
								>
									Remove
								</button>
							</div>
						</li>
					{% endfor %}
				{% endif %}
			</ul>
		</div>
  </div>

  <div class="moj-multi-file-upload__upload">
    {{ params.uploadHtml | safe }}
  </div>
</div>

