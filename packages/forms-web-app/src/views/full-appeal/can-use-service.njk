{% extends "../base/can-use-service-base.njk" %}
{% from "../macros/bool-to-sentence-case.njk" import boolToSentenceCaseField %}
{% from "../macros/multifile-upload-to-list.njk" import multifileUploadToList %}
{% from "../macros/summary-field.njk" import summaryField %}
{% from "../macros/array-new-line.njk" import arrayToNewLine %}
{% from "../macros/summary-list-rows-macro.njk" import localPlanningAuthorityRow, enforcementNoticeRow, applicationTypeRow, applicationAboutRow, applicationDecisionRow, decisionDateRow %}

{% set applicationRow %}
{% include "../partials/summary-list-rows/row-test.njk" %}
{% endset %}

{% block canUseServiceSummaryList %}
	{% if applicationAbout %}
		{% set applicationAboutRowObj = applicationAboutRow(applicationAbout) %}
	{% else %}
		{% set applicationAboutRowObj = null %}
	{% endif %}

  {% set allRows = [
		applicationRow,
    localPlanningAuthorityRow(appealLPD, changeLpaUrl),
    enforcementNoticeRow(enforcementNotice),
    applicationTypeRow(applicationType),
    applicationAboutRowObj,
    applicationDecisionRow(applicationDecision),
    decisionDateRow(dateOfDecisionLabel, decisionDate)
  ] %}
	{% set filteredRows = allRows | reject("falsy") %}

  {{ govukSummaryList({
    classes: "govuk-summary-list govuk-!-margin-bottom-9",
    rows: filteredRows
  }) }}
{% endblock %}
