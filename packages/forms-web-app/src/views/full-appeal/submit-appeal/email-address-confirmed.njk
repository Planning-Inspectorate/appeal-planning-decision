{% extends "../../layouts/full-appeal-banner/main-no-back-link.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title="Your email address is confirmed - Appeal a planning decision - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Your email address is confirmed</h1>
			{{ govukButton({
				text: "Continue",
				href: listOfDocumentsUrl,
				attributes: { "data-cy":"button-save-and-continue"}
			}) }}
    </div>
  </div>
{% endblock %}
