{% extends "layouts/full-appeal-banner/main.njk" %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/save-and-return/macro.njk" import saveAndReturnButton %}

{% set title = "Why would you prefer an inquiry? - Appeal a planning decision - GOV.UK" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block backButton %}
  {{ govukBackLink({
    text: 'Back',
    href: '/full-appeal/submit-appeal/how-decide-appeal',
    attributes: {
      'data-cy': 'back'
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}
      <form action="" method="post" novalidate>
        <span class="govuk-caption-l">Tell us how you would prefer us to decide your appeal</span>
        {{ govukTextarea({
          name: "why-inquiry",
          id: "why-inquiry",
          label: {
            text: "Why would you prefer an inquiry?",
            isPageHeading: true,
            classes: "govuk-label--l"
          },
          value: reason,
          errorMessage: errors['why-inquiry'] and {
            text: errors['why-inquiry'].msg
          }
        }) }}
        <div class="govuk-button-group">        
          {{ govukButton({
            text: "Continue",
            type: "submit",
            attributes: { "data-cy":"button-save-and-continue"}
          }) }}
      </form>
          {{ saveAndReturnButton ({}) }}
        </div>
    </div>
  </div>
{% endblock %}
