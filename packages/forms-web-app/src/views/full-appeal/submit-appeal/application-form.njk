{% extends "layouts/main.njk" %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  Planning application form - Appeal a planning decision - GOV.UK
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}
      <span class="govuk-caption-l">Upload documents from your planning application</span>
      <h1 data-cy="heading" class="govuk-heading-xl">
        Planning application form
      </h1>

      <form action="" method="post" novalidate enctype="multipart/form-data">
        {{ govukFileUpload({
          id: "file-upload",
          name: "file-upload",
          label: {
            text: "Drag and drop or choose a file"
          },
          classes: "pins-file-upload",
          errorMessage: errors['file-upload'] and { text: errors['file-upload'].msg }
        }) }}

        {{ govukDetails({
          summaryText: "Files you can upload",
          html: '<p class="govuk-body">
                  You can upload the following types of file:
                </p>
                <ul class="govuk-list govuk-list--bullet">
                  <li>DOC or DOCX</li>
                  <li>JPG or JPEG</li>
                  <li>PDF</li>
                  <li>PNG</li>
                  <li>TIF or TIFF</li>
                </ul>
                <p class="govuk-body">
                  Your file must be smaller than 15MB.
                </p>'
        }) }}

        {{ govukButton({
          text: "Save and continue",
          type: "submit",
          attributes: { "data-cy":"button-submit"}
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
