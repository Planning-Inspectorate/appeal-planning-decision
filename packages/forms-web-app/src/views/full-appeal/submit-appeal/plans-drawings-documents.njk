{% extends "layouts/full-appeal-banner/main.njk" %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{%- from "govuk/components/inset-text/macro.njk" import govukInsetText -%}
{%- from "components/multi-file-upload/macro.njk" import mojMultiFileUpload -%}
{% from "components/save-and-return/macro.njk" import saveAndReturnButton %}

{% set labelText = "Drag and drop or choose files" %}
{% set title = "Plans, drawings and supporting documents - Appeal a planning decision - GOV.UK" %}

{% set plansDrawingsDocumentsErrorMessage %}
  {% if errorSummary %}
    {%- for error in errorSummary -%}
      {{- error.text -}}<br>
    {%- endfor -%}
  {% endif %}
{% endset %}

{% set uploadHtml %}
  {{ govukFileUpload({
    id: "file-upload",
    name: "file-upload",
    classes: 'moj-multi-file-upload__input',
    label: {
      text: labelText,
      classes: 'govuk-label--m'
    },
    attributes: { multiple: '' },
    errorMessage: errorSummary and {
      html: plansDrawingsDocumentsErrorMessage
    }
  }) }}

  {{govukButton({
    text: 'Upload file',
    classes: 'govuk-button--secondary moj-multi-file-upload__button',
    name: 'upload-and-remain-on-page',
    value: 'upload-and-remain-on-page',
    attributes: { "data-cy":"button-upload-file"}
  })}}
{% endset %}

{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}

      <span class="govuk-caption-l">Upload documents from your planning application</span>
      <h1 class="govuk-heading-l">Plans, drawings and supporting documents</h1>
      
      <form action="" method="post" novalidate enctype="multipart/form-data">

      {{ mojMultiFileUpload({
        uploadedFiles: {
          heading: { text: 'Files added' },
          items: uploadedFiles
        },
        uploadHtml: uploadHtml
      }) }}

      {{ govukDetails({
        summaryText: "Files you can upload",
        html: '<p class="govuk-body">
                You can upload the following types of file:
              </p>
              <ul class="govuk-list govuk-list--bullet">
                <li>DOC or DOCX</li>
                <li>JPG or JPEG</li>
                <li>PDF</li>
                <li>PNG</li>
                <li>TIF or TIFF</li>
              </ul>
              <p class="govuk-body">
                Your file must be smaller than 15MB.
              </p>'
      }) }}

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            type: "submit",
            attributes: { "data-cy":"button-save-and-continue"}
          }) }}
          {{ saveAndReturnButton() }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}
