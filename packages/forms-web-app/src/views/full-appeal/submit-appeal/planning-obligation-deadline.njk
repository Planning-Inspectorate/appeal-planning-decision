{% extends "layouts/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "components/save-and-return/macro.njk" import saveAndReturnButton %}

{% set heading = "Planning obligation deadline" %}

{% set title = "Planning obligation deadline - Appeal a planning decision - GOV.UK" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary,
          attributes: {"data-cy": "error-wrapper"}
        }) }}
      {% endif %}
      <form action="" method="post" novalidate>
<input type="hidden" name="_csrf" value="{{_csrf}}">
        <span class="govuk-caption-l">Upload documents for your appeal</span>
        <h1 class="govuk-heading-l">Planning obligation deadline</h1>
        <p class="govuk-body">
            Your deadline to submit your finalised planning obligation is around 6 weeks after you submit your appeal. Weâ€™ll tell you the exact date when we confirm your appeal.
        </p>

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            type: "submit",
            attributes: { "data-cy":"button-save-and-continue"}
          }) }}
          {{ saveAndReturnButton () }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}
