{% extends servicePage %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "pins/components/appeal-sections-block.njk" import appealSectionsBlock %}

{% set title="Questionnaire " + appeal.appealNumber + " - " + titleSuffix + " - GOV.UK" %}

{% block pageTitle %}
	{{ title }}
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-full">
      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary
        }) }}
			{% endif %}

      <span class="govuk-caption-xl">Appeal {{appeal.appealNumber}}</span>
			<h1 class="govuk-heading-xl">{{mainHeading}}</h1>

			{{ govukSummaryList({
				classes: "appeal-headlines govuk-summary-list--no-border",
				rows: appeal.headlineData
			}) }}

			<hr class="govuk-section-break govuk-section-break--visible govuk-section-break--m">

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Constraints, designations and other issues</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.constraintsDetails
				}) }}
			</div> 

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Environmental impact assessment</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.environmentalDetails
				}) }}
			</div> 

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Notifying people about the application</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.notifiedDetails
				}) }}
			</div>

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Consultation responses and representations</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.consultationDetails
				}) }}
			</div>

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Planning officerâ€™s report and supplementary documents</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.planningOfficerDetails
				}) }}
			</div>

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Site access</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.siteAccessDetails
				}) }}
			</div>

			<div class="appeal-decision govuk-grid-column-two-thirds">
				<h2 class="govuk-heading-l">Appeal process</h2>

				{{ govukSummaryList({
					classes: "govuk-summary-list long-answers",
					rows: appeal.appealProcessDetails
				}) }}
			</div>
		</div>

	</div>
{% endblock %}