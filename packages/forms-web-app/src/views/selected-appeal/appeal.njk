{% extends "layouts/no-banner-link/main.njk" %}

 {% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
 {% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

 {% set title="
 Appeal " + appeal.appealNumber + " - Appeal a planning decision - GOV.UK" %}

 {% block pageTitle %}
   {{ title }}
 {% endblock %}

 {% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

       {% if errorSummary %}
         {{ govukErrorSummary({
           titleText: "There is a problem",
           errorList: errorSummary
         }) }}
       {% endif %}

       <h1 class="govuk-heading-l">Appeal {{appeal.appealNumber}}</h1>

		{{ govukSummaryList({
			classes: "appeal-headlines govuk-summary-list--no-border",
			rows: appeal.headlineData
		}) }}

		</div>
	</div>

 {% endblock %}
