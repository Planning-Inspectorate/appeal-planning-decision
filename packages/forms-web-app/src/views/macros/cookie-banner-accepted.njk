{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}
{% macro cookieBannerAccepted(attributes = {}) -%}
  {% set serviceName = attributes.serviceName | default('appeal a planning decision service', true) %}
  {% set cookiePagePath = attributes.cookiePagePath | default('/cookies', true) %}
  {% set ariaLabel = 'Cookies on %serviceName%' | replace('%serviceName%', serviceName) %}
  {% set acceptHtml %}
  <p class="govuk-body">Youâ€™ve accepted analytics cookies. You can
    <a class="govuk-link" href="{{ cookiePagePath }}">change your cookie settings</a>
    at any time.</p>
  {% endset %}
  {{ govukCookieBanner({
    ariaLabel: ariaLabel,
    attributes: {
      "data-cy": "cookie-banner-accepted",
      id: "cookie-banner-accepted"
    },
    classes: "govuk-!-display-none",
    messages: [
      {
        html: acceptHtml,
        actions: [
          {
            text: "Hide this message",
            type: "submit",
            name: "cookie_banner_accepted",
            value: "hide",
            attributes: {
              "data-cy": "cookie-banner-accepted-hide-message",
              "aria-label": "Hide the cookie confirmation message"
            }
          }
        ]
      }
    ]
  }) }}
{%- endmacro %}
