{% extends "layouts/full-appeal-banner/main-no-back-link.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title="Request a new code - Appeal a planning decision - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Request a new code</h1>
      <p class="govuk-body">Emails sometimes take a few minutes to arrive. If you do not receive the code, you can request a new one.</p>
      <form action="" method="post" novalidate>
        {{ govukButton({
          text: "Request a new code",
          type: "submit",
          attributes: { "data-cy":"button-save-and-continue"}
        }) }}
      </form>
    </div>
  </div>
{% endblock %}