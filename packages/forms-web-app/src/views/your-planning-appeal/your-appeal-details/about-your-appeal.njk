<!--
 There is a requirement for this template to have no border on the final item.
 The nunjucks component in version v3.11.0 does not support this.
 @see https://github.com/alphagov/govuk-design-system-backlog/issues/182
 -->

{% from "../../macros/multifile-upload-to-list.njk" import multifileUploadToList %}
{% from "../../macros/bool-to-sentence-case.njk" import boolToSentenceCaseField %}

{% block content %}

  <dl class="govuk-summary-list" data-cy="about-your-appeal">

    <div class="govuk-summary-list__row" data-cy="your-appeal-statement-row">
      <dt class="govuk-summary-list__key" data-cy="your-appeal-statement-key">
        Your appeal statement
      </dt>
      <dd class="govuk-summary-list__value" data-cy="your-appeal-statement-value">
        <!-- using multifile upload display as per the design -->
        {{ multifileUploadToList([appeal.yourAppealSection.appealStatement.uploadedFile], { 'data-cy': 'your-appeal-statement' }) }}
      </dd>
    </div>

    <div class="govuk-summary-list__row" data-cy="documents-to-support-your-appeal-row">
      <dt class="govuk-summary-list__key govuk-summary-list__key--no-border" data-cy="documents-to-support-your-appeal-key">
        Documents to support your appeal
      </dt>
      <dd class="govuk-summary-list__value govuk-summary-list__value--no-border" data-cy="documents-to-support-your-appeal-value">
        <!-- using multifile upload display as per the design -->
        {{ multifileUploadToList(appeal.yourAppealSection.otherDocuments.uploadedFiles, { 'data-cy': 'documents-to-support-your-appeal' }) }}
      </dd>
    </div>

  </dl>

{% endblock %}
