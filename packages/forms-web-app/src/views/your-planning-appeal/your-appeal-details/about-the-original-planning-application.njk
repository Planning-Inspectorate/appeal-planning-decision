<!--
 There is a requirement for this template to have no border on the final item.
 The nunjucks component in version v3.11.0 does not support this.
 @see https://github.com/alphagov/govuk-design-system-backlog/issues/182
 -->

{% from "../../macros/multifile-upload-to-list.njk" import multifileUploadToList %}

{% block content %}

  <dl class="govuk-summary-list" data-cy="about-the-original-planning-application">

    <div class="govuk-summary-list__row" data-cy="planning-application-form-row">
      <dt class="govuk-summary-list__key" data-cy="planning-application-form-key">
        Planning application form
      </dt>
      <dd class="govuk-summary-list__value" data-cy="planning-application-form-value">
        <!-- using multifile upload display as per the design -->
        {{ multifileUploadToList([appeal.requiredDocumentsSection.originalApplication.uploadedFile], { 'data-cy': "planning-application-form" }) }}
      </dd>
    </div>

    <div class="govuk-summary-list__row" data-cy="decision-letter-row">
      <dt class="govuk-summary-list__key govuk-summary-list__key--no-border" data-cy="decision-letter-key">
        Decision letter
      </dt>
      <dd class="govuk-summary-list__value govuk-summary-list__value--no-border" data-cy="decision-letter-value">
        <!-- using multifile upload display as per the design -->
        {{ multifileUploadToList([appeal.requiredDocumentsSection.decisionLetter.uploadedFile], { 'data-cy': "decision-letter" }) }}
      </dd>
    </div>

  </dl>

{% endblock %}
