{% extends "layouts/main.njk" %}

{% from "govuk/components/accordion/macro.njk" import govukAccordion %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block pageTitle %}Your appeal details - Appeal a planning decision - GOV.UK{% endblock %}

{% block content %}

  <div class="govuk-grid-row">

    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l" data-cy="your-appeal-details-page-heading">
        Your appeal details
      </h1>

      <p>You submitted the following information on <span data-cy="appeal-submission-date">{{ appeal.submissionDate | date('D MMMM YYYY') }}</span>.</p>

      {% include "./your-appeal-details/your-appeal-details-summary.njk" %}

      {% set aboutTheOriginalPlanningApplicationHtml %}{% include "./your-appeal-details/about-the-original-planning-application.njk" %}{% endset %}
      {% set aboutYourAppealHtml %}{% include "./your-appeal-details/about-your-appeal.njk" %}{% endset %}
      {% set visitingTheAppealSiteHtml %}{% include "./your-appeal-details/visiting-the-appeal-site.njk" %}{% endset %}

      {{ govukAccordion({
        id: "accordion-your-appeal-details",
        items: [
          {
            heading: {
              text: "About the original planning application"
            },
            content: {
              html: aboutTheOriginalPlanningApplicationHtml
            }
          },
          {
            heading: {
              text: "About your appeal"
            },
            content: {
              html: aboutYourAppealHtml
            }
          },
          {
            heading: {
              text: "Visiting the appeal site"
            },
            content: {
              html: visitingTheAppealSiteHtml
            }
          }
        ]
      }) }}

    </div>

  </div>

{% endblock %}
