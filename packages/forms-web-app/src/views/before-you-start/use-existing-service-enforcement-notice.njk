{% extends "layouts/no-banner-link/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
    You need to use the existing service - Before you start - Appeal a planning decision - GOV.UK
{% endblock %}

{% block backButton %}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">You need to use the existing service</h1>

		{% if isV2forEnforcement %}
			<p class="govuk-body">This new service is only for appeals about certain enforcement notice types. </p>
		{% else %}
   	 	<p class="govuk-body">This new service is only for appeals that do not involve an enforcement notice. </p>
		{% endif %}

    <p class="govuk-body">You need to submit your appeal using the existing service, the Appeals Casework Portal. </p>

    <h2 class="govuk-heading-m">How to begin your appeal</h2>

    <p class="govuk-body">To begin your appeal, log in or register on the Appeals Casework Portal.</p>
    {{ govukButton({
      text: "Continue to the Appeals Casework Portal",
      href: acpLink
    }) }}
  </div>
</div>

{% endblock %}
