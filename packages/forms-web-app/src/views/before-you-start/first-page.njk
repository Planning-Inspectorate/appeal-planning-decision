{% extends "layouts/main-no-back-link.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title="Before you start - Appeal a planning decision - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Before you start</h1>
      <p class="govuk-body">This is a new service. It's only for appeals about certain local planning departments and planning application types.</p>
      <h2 class="govuk-heading-m">Check if you can use this service</h2>
      <p class="govuk-body">Before you start, we'll check if you can use this service by asking some questions about your appeal.</p>
      <p class="govuk-body">If you cannot use this service, you can still appeal using the existing service.</p>
      {{ govukButton({ text: "Continue", type: button, href: nextPage, attributes: { "data-cy":"start-button"} }) }}
    </div>
  </div>
{% endblock %}