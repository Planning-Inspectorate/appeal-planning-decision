{% extends "layouts/main.njk" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Sorry, there is a problem with the service</h1>
			<p class="govuk-body">
        We are aware of an issue and are in the process of fixing it.
      </p>
      <p class="govuk-body">
        Enter the information again, but do not include special characters like ' and \.
      </p>

      <h2 class="govuk-heading-s">Appeal a planning decision</h1>

      <ul class="govuk-list">
        <li>Email: <a data-cy="Enquiries" href="mailto:enquiries@planninginspectorate.gov.uk">enquiries@planninginspectorate.gov.uk</a></li>
        <li>We aim to respond within 7 days.</li>
      </ul>
      <ul class="govuk-list">
        <li>Telephone: 0303 444 5000</li>
        <li>Monday to Friday, 9am to midday (except public holidays)</li>
      </ul>
      <p><a href="https://www.gov.uk/call-charges">Find out about call charges</a></p>
    </div>
  </div>

{% endblock %}
