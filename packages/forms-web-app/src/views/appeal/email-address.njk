{% extends "layouts/no-banner-link/main.njk" %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% set title="
What is the email address you used to save the appeal? - Appeal a planning decision - GOV.UK" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary
        }) }}
      {% endif %}

      <form action="" method="post" novalidate>
        {{ govukInput({
          label: {
            text: "What is the email address you used to save the appeal?",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          hint: {
            text: "Weâ€™ll send you a code to confirm you still have access to the email address"
          },
          id: "email-address",
          name: "email-address"
        }) }}
        {{ govukButton({
          text: "Continue",
          type: "submit",
          attributes: { "data-cy":"button-save-and-continue"}
        }) }}
      </form>
    </div>
  </div>
{% endblock %}