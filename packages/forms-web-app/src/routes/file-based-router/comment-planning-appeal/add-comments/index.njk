{% extends "layouts/comment-planning-appeal/index.njk" %}
{% set title = "Add your comments" %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% block content %}
    <form method="post">
<input type="hidden" name="_csrf" value="{{_csrf}}">
        <div class="govuk-form-group">
            <label class="govuk-label govuk-label--l" for="comments">Add your comments</label>
            <p class="govuk-body">Let us know why you do, or do not, support this appeal against a local authority’s planning decision.</p>
						<p class="govuk-body">You must be over 18 to comment on an appeal.</p>
						<p class="govuk-body">Your comment should:</p>
						<ul class="govuk-list govuk-list--bullet">
							<li>be simple and concise</li>
							<li>be based on facts related to the planning application</li>
							<li>reference relevant planning policies, for example, your Neighbourhood Plan, local district plans, community plans, environmental policies – you will find these on your local authority’s website</li>
						</ul>
						<p class="govuk-body">Your comment should not:</p>
						<ul class="govuk-list govuk-list--bullet">
							<li>include personal opinion or rumour</li>
							<li>use offensive language</li>
							<li>include information that is not related to planning law, for example, criminal behaviour or someone’s personal characteristics</li>
						</ul>
						<details class="govuk-details">
  						<summary class="govuk-details__summary">
    						<span class="govuk-details__summary-text">
      						Examples of personal characteristics
    						</span>
  						</summary>
  						<div class="govuk-details__text">
    						<ul class="govuk-list govuk-list--bullet">
									<li>race</li>
									<li>ethnic origin</li>
									<li>politics</li>
									<li>religion</li>
									<li>trade union membership</li>
									<li>genetics</li>
									<li>physical characteristics</li>
									<li>sex life</li>
									<li>sexual orientation</li>
								</ul>
 							</div>
						</details>
						<p class="govuk-body">Any comment submitted that does not meet our criteria will be returned to you and you will be asked to resubmit it. This delay may cause you to miss the deadline to comment.</p>

            {{ govukTextarea({
							label: {
                text: 'Your comments',
                classes: 'govuk-label govuk-label--m',
                for: 'comments'
              },
              classes: "govuk-textarea",
              id : "comments",
              name: "comments",
							rows: "8",
              errorMessage: error,
              value: interestedParty.comments
              })
            }}
        </div>
				<div class="govuk-form-group">
					{{ govukCheckboxes({
          name: "comments-confirmation",
					classes: "govuk-checkboxes checkboxes-long-text",
          items: [
            {
              value: "yes",
              text: "I confirm that I have not included any sensitive information in my comments."
            }
          ],
          errorMessage: errors['comments-confirmation'] and {
            text: errors['comments-confirmation'].msg
          }
        }) }}
				</div>
				<div class="govuk-button-group">
        {{ govukButton({text: "Continue", type: "submit"}) }}
				</div>
    </form>

{% endblock content %}
