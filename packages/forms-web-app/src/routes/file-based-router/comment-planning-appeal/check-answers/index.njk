{% extends "layouts/comment-planning-appeal/index.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = "Check your answers and submit your comments" %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
		<h1 class="govuk-heading-l">Check your answers and submit your comments</h1>
		<form method="post">
		<input type="hidden" name="_csrf" value="{{_csrf}}">
      <div class="govuk-form-group">
        {{ govukSummaryList({
					rows: ipSummaryList
				  }) }}
      </div>
			<div class="govuk-button-group">
        {{ govukButton({text: "Submit comments", type: "submit"}) }}
			</div>
    </form>
		</div>
	</div>

{% endblock content %}
