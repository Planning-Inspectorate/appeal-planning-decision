{% extends "layouts/comment-planning-appeal/index.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = "Enter your address" %}

{% block content %}
		<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <form action="" method="post" novalidate>
				<input type="hidden" name="_csrf" value="{{_csrf}}">

				{% call govukFieldset({
          legend: {
            text: "Enter your address",
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
          }
          }) %}

        	<p class="govuk-body">If your address is near the appeal site, your comment may have more weight when we decide the appeal. You do not have to enter your address.</p>

        	{{ govukInput({
        	  label: {
        	    text: "Address line 1"
        	  },
        	  id: "address-line-1",
        	  name: 'addressLine1',
        	  value: interestedParty.addressLine1,
        	  autocomplete: "address-line1",
        	  errorMessage: errors[addressLine1] and {
        	    text: errors[addressLine1].msg
        	  }
        	  }) }}

        	{{ govukInput({
        	  label: {
        	    text: "Address line 2 (optional)"
        	  },
        	  id: "address-line-2",
        	  name: 'addressLine2',
        	  value: interestedParty.addressLine2,
        	  autocomplete: "address-line2",
        	  errorMessage: errors[addressLine2] and {
        	    text: errors[addressLine2].msg
        	  }
        	  }) }}

        	{{ govukInput({
        	  label: {
        	  text: "Town or city"
        	  },
        	  classes: "govuk-!-width-two-thirds",
        	  id: "address-town",
        	  name: 'townCity',
        	  value: interestedParty.townCity,
        	  autocomplete: "address-level2",
        	  errorMessage: errors[townCity] and {
        	      text: errors[townCity].msg
        	  }
        	}) }}

        	{{ govukInput({
        	  label: {
        	  text: "County (optional)"
        	  },
        	  classes: "govuk-!-width-two-thirds",
        	  id: "address-county",
        	  name: 'county',
        	  value: interestedParty.county,
        	  autocomplete: "address-level1",
        	  errorMessage: errors[county] and {
        	      text: errors[county].msg
        	  }
        	}) }}

        	{{ govukInput({
        	  label: {
        	  text: "Postcode"
        	  },
        	  classes: "govuk-input--width-10",
        	  id: "address-postcode",
        	  name: 'postcode',
        	  value: interestedParty.postcode,
        	  autocomplete: "postal-code",
        	  errorMessage: errors[postcode] and {
        	      text: errors[postcode].msg
        	  }
        	}) }}

        {% endcall %}

				<div class="govuk-button-group">
        	{{ govukButton({text: "Continue", type: "submit"}) }}
					{{ govukButton({text: "Skip", classes: "govuk-button--secondary", href:"email-address"}) }}
				</div>
      	</form>
      </div>
    </div>

{% endblock content %}
