{
	"name": "@pins/database",
	"version": "0.0.0",
	"description": "Common sql database access",
	"private": true,
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"scripts": {
		"migrate:dev": "npx prisma migrate dev",
		"migrate:prod": "npx prisma migrate deploy",
		"generate": "npx prisma generate && tsc --project src/client-tsconfig.json",
		"seed": "npm run generate && npx prisma db seed",
		"seed:prod": "npm run generate && node src/seed/seed-prod.js",
		"lint": "eslint ./",
		"tscheck": "tsc"
	},
	"author": "Planning-Inspectorate <https://gov.uk/pins>",
	"license": "ISC",
	"dependencies": {
		"@pins/common": "^0.0.0",
		"@planning-inspectorate/data-model": "*",
		"@prisma/adapter-mssql": "*",
		"@prisma/client": "*"
	},
	"devDependencies": {
		"dotenv": "*",
		"prisma": "*",
		"ts-jest": "*",
		"typescript": "*"
	}
}
