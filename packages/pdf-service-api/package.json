{
	"name": "pdf-service-api",
	"version": "1.0.0",
	"main": "src/main.js",
	"scripts": {
		"start": "node ./",
		"start:dev": "nodemon -e .js,.json,.yml,.yaml ./ | pino-pretty -tlc",
		"test": "jest",
		"test:cov": "jest --coverage",
		"test:watch": "jest --watch",
		"format": "prettier --write './**/*.js'",
		"lint": "eslint ./",
		"documentation": "jest --bail --coverage --coverageReporters=cobertura --reporters=default --reporters=jest-junit"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"multer": "^1.4.3",
		"pino": "^6.13.3",
		"puppeteer": "^7.1.0"
	},
	"devDependencies": {
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^24.4.0",
		"jest": "^28.1.1",
		"jest-junit": "^13.2.0",
		"nodemon": "^2.0.12",
		"pino-pretty": "^4.8.0",
		"prettier": "^2.3.2"
	}
}
