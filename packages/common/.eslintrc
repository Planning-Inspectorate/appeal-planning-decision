{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "ignorePatterns": ["node_modules/**", "src/public/javascripts/**", "dist/**", "webpack.**"],
  "plugins": ["jest", "prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": "error"
  },
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  }
}
