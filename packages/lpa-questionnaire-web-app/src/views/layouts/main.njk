{% extends "govuk/template.njk" %}

{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}

{% block head %}
  {% include "includes/head.njk" %}
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: 'Appeal a householder planning decision',
    serviceUrl: "/task-list",
    containerClasses: "govuk-width-container"
  }) }}
{% endblock %}

{% set mainClasses = mainClasses | default("govuk-main-wrapper--auto-spacing") %}

{% block main %}
  <div class="govuk-width-container govuk-body {{ containerClasses }}">

    <main id="main-content" role="main"{% if mainLang %} lang="{{ mainLang }}"{% endif %}>
      {{ govukPhaseBanner({
        tag: {
          text: "beta"
        },
        html: 'This is a beta service â€“ your <a class="govuk-link" data-cy="Feedback" href="https://www.smartsurvey.co.uk/s/7OGXZZ/">feedback</a> will help us to improve it.'
      }) }}

      {% block beforeContent %}
      {% endblock %}

      <div class="govuk-main-wrapper {{ mainClasses }}">
        {% block content %}{% endblock %}
      </div>
    </main>
  </div>
{% endblock %}

{% block footer %}
  {{ govukFooter({
  navigation: [
    {
      title: "Contact the Planning Inspectorate",
      columns: 2,
      items: [
      {
        href: "tel:03034445000",
        text: "Customer Support: England 0303 444 5000"
      },
      {
        href: "mailto:enquiries@planninginspectorate.gov.uk",
        text: "enquiries@planninginspectorate.gov.uk"
      }
    ]
    },
    {
      title: "Service information",
      items: [
      {
        href: "https://www.gov.uk/government/publications/appeals-portal-documents",
        text: "Terms and conditions",
        attributes: { "data-cy":"Terms and conditions" }

      },
      {
        href: "https://www.gov.uk/government/publications/appeals-portal-documents",
        text: "Privacy",
        attributes: { "data-cy":"Privacy" }
      },
      {
        href: "#3",
        text: "Accessibility"
      }
    ]
    }
  ]
  }) }}
{% endblock %}

{% block bodyEnd %}
  {% block scripts %}
    {% include "includes/scripts.njk" %}
    {% block pageScripts %}{% endblock %}
  {% endblock %}
{% endblock %}
