{% extends "layouts/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle %}
  Your details | Appeal a householder planning decision
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">

    <div class="govuk-grid-column-two-thirds">
      <form action="" method="post" novalidate>
        <span class="govuk-caption-l"><span class="govuk-visually-hidden">Section. </span>About you</span>
        <h1 class="govuk-heading-l">
          Your details
        </h1>
        <p>We ask for your name and email address so we can contact you about your appeal.</p>

        {{ govukInput({
          label: {
            text: "Your name",
            classes: "govuk-label",
            isPageHeading: false
          },
          id: "appellant-name",
          name: "appellant-name",
          value: appeal.appellantName
        }) }}

        {{ govukInput({
          label: {
            text: "Your email",
            classes: "govuk-label",
            isPageHeading: false
          },
          id: "appellant-email",
          name: "appellant-email",
          value: appeal.appellantEmail
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}
      </form>
    </div>

    {% include "includes/save.njk" %}
  </div>
{% endblock %}
